{{!-- Include the main layout --}}
{{> main}}

{{!-- Set the page title --}}
{{#settitle}}Edit Post{{/settitle}}

{{!-- Begin the content --}}
{{#content "main"}}
  <h1>Edit Post</h1>

  <form class="edit-form">
    <input type="hidden" id="edit-id" value="{{blog.id}}">
    <div class="form-group">
      <label for="edit-title">Title:</label>
      <input type="text" id="edit-title" value="{{blog.title}}">
    </div>
    <div class="form-group">
      <label for="edit-content">Content:</label>
      <textarea id="edit-content">{{blog.content}}</textarea>
    </div>
    <button type="submit" class="btn">Edit Post</button>
  </form>
{{/content}}
